<div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
        <div class="container">

            <form id="chat.index.formConnect" class="navbar-form" method="POST" action="">
                <div class="controls">
                    <input name="agent" class="" type="text" placeholder="Agent...">
                    <button type="submit" class="btn">Connect</button>
                </div>
            </form>

        </div>
    </div>
</div>

<div id="chat.index.messages" class="container" style="margin-top: 60px; height: 100%;  overflow: hidden;"></div>

<div class="navbar navbar-fixed-bottom navbar-inverse">
    <div class="navbar-inner">
        <div class="container">

            <form id="chat.index.formSendMessage" class="navbar-form" method="POST" action="">
                <div class="controls">
                    <input name="message" class="input-block-level" type="text" placeholder="Message...">
                </div>
            </form>

        </div>
    </div>
</div>

{{template "chat/message/left"}}
{{template "chat/message/right"}}

